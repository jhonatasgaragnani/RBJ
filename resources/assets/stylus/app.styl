@import "../../../node_modules/vuetify/src/stylus/settings/_colors.styl"

$theme := {
  primary: $yellow.darken-4
  accent: $blue.accent-2
  secondary: $grey.darken-3
  info: $blue.base
  warning: $amber.base
  error: $red.base
  success: $green.base
}

@import '../../../node_modules/vuetify/src/stylus/settings/_variables.styl'
@import "../../../node_modules/vuetify/src/stylus/main"

.r-fade-enter-active, .r-fade-leave-active
  transition: opacity 0.3s

.r-fade-enter, .r-fade-leave-active
  opacity: 0

@media $display-breakpoints.xs-only
  #volume_control
    width: 35%
  .schedule--name
    max-width: 200px
  .chat--box
    height: 70vh
  .carousel
    height 300px !important

@media $display-breakpoints.sm-only
  #volume_control
    width: 35%
  .schedule--name
    max-width: 350px
  .chat--box
    height: 70vh
  .carousel
    height 300px !important

@media $display-breakpoints.md-only
  #volume_control
    width: 15%
  .schedule--name
    max-width: 350px
  .chat--box
    height: 70vh
  .carousel
    height 500px !important


@media $display-breakpoints.lg-and-up
  #volume_control
    width: 15%
  .schedule--name
    max-width: 350px
  .chat--box
    height: 75vh
  .carousel
    height 500px !important

.chat--box, .chat--form
  width: 100%

.chat--inner
  overflow-y: scroll
